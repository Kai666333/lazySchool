<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout1_sign_in"
    android:layout_marginTop="100dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greywhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/LogoImage_sign_in"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textview_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LogoImage_sign_in"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="易校园·登录"
            android:textColor="#808080"
            android:textSize="30dp"
            android:textStyle="italic"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_sign_in"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/identity_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="客户端"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switch_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LinearLayout_sing_in_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_sign_in_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="42dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/translucent_edit"
                    android:hint="请输入手机号"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LinearLayout_sing_in_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_sign_in_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="42dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/translucent_edit"
                    android:hint="请输入密码"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/checkbox_sign_in_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/checkbox_password"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout_sign_in_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!--登录按钮-->
                <Button
                    android:id="@+id/Button_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/translucent_button"
                    android:padding="6dp"
                    android:text="登   录"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/linearLayout_sign_in_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <!--点击忘记密码-->
                    <Button
                        android:id="@+id/button_sign_in_forgetPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:text="忘记密码？"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <!--<View
                        android:id="@+id/view111"
                        android:layout_width="@+id/button_sign_in_forgetPassword"
                        android:layout_height="1dp"
                        android:layout_below="@+id/button_sign_in_forgetPassword"
                        android:layout_marginRight="@+id/button_sign_in_forgetPassword"
                        android:background="@color/black" />-->

                    <!--小小分割线-->
                    <!--点击注册-->

                    <View
                        android:id="@+id/view111"
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-19dp"
                        android:layout_toRightOf="@+id/button_sign_in_forgetPassword"
                        android:background="#4DFFFFFF" />

                    <Button
                        android:id="@+id/button_sign_in_to_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@+id/view111"
                        android:background="@null"
                        android:text="没有账户？点击注册"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <!--<View
                        android:layout_width="@+id/button_sign_in_to_sign_up"
                        android:layout_height="1dp"
                        android:layout_below="@+id/button_sign_in_to_sign_up"
                        android:layout_marginRight="@+id/button_sign_in_to_sign_up"
                        android:background="@color/black" />-->
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>